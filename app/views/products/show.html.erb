<%content_for :title, t('titles.showing', :model => Product.human_name) %>
<p>
  <b><%= Ingredient.human_attribute_name(:name) %></b>
  <%=h @product.name %>
</p>

<p>
  <b><%= Ingredient.human_attribute_name(:description) %></b>
  <%=h @product.description %>
</p>

<p>
<h2><%= Ingredient.human_name %></h2>
<table>
  <tr>
    <th><%= Ingredient.human_attribute_name(:name) %></th>
    <th><%= Formula.human_attribute_name(:ingredient_ammount) %></th>
  </tr>
  <% @product.formulas.each do |formula| %>
    <tr>
      <td><%=h formula.ingredient.name %></td>
      <td><%=h formula.ingredient_ammount %></td>
    </tr>
  <% end %>
</table>
<hr>
</p>

<hr>
<p>
<h2><%= t('titles.product_presentations') %></h2>
<table>
  <tr>
    <th><%= ProductPresentation.human_attribute_name(:name) %></th>
    <th><%= ProductPresentation.human_attribute_name(:description) %></th>
    <th><%= ProductPresentation.human_attribute_name(:unit_price) %></th>
  </tr>
  <% @product.product_presentations.each do |product| %>
    <tr>
      <td><%=h product.name %></td>
      <td><%=h product.description %></td>
      <td><%=h product.unit_price %></td>
    </tr>
  <% end %>
</table>
<hr>
</p>

<%= link_to t('forms.edit'), edit_product_path(@product) %> |
<%= link_to t('forms.back'), products_path %>