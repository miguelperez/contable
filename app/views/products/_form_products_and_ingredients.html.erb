  <% tabbed_body t('navigation.product_information') do %>
    <%= render :partial => 'products/products_table', :locals => {:product_presentations => product.product_presentations} %>
  <% end -%>
<% end -%>

<% content_for :tab_link, tab_link(t('navigation.ingredients'))-%>
