<h1>Add product</h1>

<% form_for(@product, :html => {:id => 'styled-form'}) do |f| %>
  <%= f.error_messages %>

  <div id="field-set">
    <h3><span>Product details</span></h3>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </p>
  </div>

  <div id="content-wrapper">

    <div id="products">
      <div id="product-presentations">
        <%= render :partial => 'products/product_presentation', :collection => @product.product_presentations %>
      </div>

      <%= add_product_presentation_link "Add a product presentation" %>
    </div>

    <div id="footer">
      <%= f.submit 'Create', :class => 'big-button' %>
      <%= link_to 'Cancel', products_path %>
    </div>
    
  </div>

<% end %>

<script type="text/javascript">
  function animate(div){
    _(div).slideToggle("slow");
  }
</script>

