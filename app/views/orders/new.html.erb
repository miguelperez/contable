<h1>New order</h1>

<% form_for(@order) do |f| %>
  <%= f.error_messages %>

  <div id="client">
    <%= render :partial => 'client_form', :locals =>  { :client => @order.client }%>
  </div>

  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :registration_date %><br />
    <%= f.datetime_select :registration_date %>
  </p>
  <p>
    <%= f.label :ammount %><br />
    <%= f.text_field :ammount %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', orders_path %>
<% content_for :javascript, javascript_include_tag("clients") -%>