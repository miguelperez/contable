<%content_for :title, t('titles.editing', :model => Ingredient.human_name) %>

<% form_for(@ingredient, :html => {:id => 'styled-form'}) do |f| %>

  <%= render :partial => 'ingredients/form', :locals => {:form => f} %>

  <div class="clear"></div>

  <p id="submit">
    <%= f.submit t('forms.update'), :class => 'big-button' %>
    <%= link_to t('forms.cancel'), ingredients_path %>
  </p>

<% end %>

<%= link_to t('forms.show'), @ingredient %> |
<%= link_to t('forms.back'), ingredients_path %>