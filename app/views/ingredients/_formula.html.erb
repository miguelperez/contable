<div class="formula">
  <% new_or_existing = formula.new_record? ? 'new' : 'existing' %>
  <% prefix = "product[#{new_or_existing}_formula_attributes][]" %>
  <% fields_for prefix, formula do |f| -%>

    <div class="ingredient">
      <h4><%= h formula.ingredient.name if formula.ingredient%></h4>
      <label class="styled-label"><%= Formula.human_attribute_name(:ingredient_ammount) %></label>
      <%= f.hidden_field :ingredient_id%>
      <%= f.text_field :ingredient_ammount, :class => 'styled-input' %>
      <% json = formula.ingredient.to_json(:only => [:id, :name]) %>
      <%= round_button('delete', "", {:onclick => "IngredientsHelper.createIngredientTag(#{json}, $$(\".clean-ul\"));$(this).up(\".formula\").remove()"}) %>
    </div>

  <% end -%>
</div>