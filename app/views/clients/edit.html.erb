<%content_for :title, "Editing Client" %>

<% form_for(@client, :html => {:id => 'styled-form'}) do |f| %>
  <div id="field-set" class="client">
    <h3><span>Client details</span></h3>

    <%= f.error_messages %>

    <p>
      <%= f.label :id_number %>
      <%= f.text_field :id_number %>
    </p>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </p>

    <p>
      <%= f.label :address %>
      <%= f.text_field :address %>
    </p>

    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>

  </div>

  <div class="clear"></div>

  <p id="submit">
    <%= f.submit 'Update', :class => 'big-button' %>
    <%= link_to 'Cancel', clients_path %>
  </p>

<% end %>
<%= link_to 'Show', @client %> |
<%= link_to 'Back', clients_path %>